{
	"env": {
		"browser": true,
		"node": true
	},

	"parser": "babel-eslint",

	"rules": {
		"brace-style": [2, "1tbs"],
		"default-case": 2,
		"camelcase": 2,
		"consistent-this": [2, "_this"],
		"curly": 2,
		"dot-notation": 0,
		"eol-last": 2,
		"func-names": 2,
		"func-style": [2, "declaration"],
		"guard-for-in": 2,
		"key-spacing": [2, { "beforeColon": false, "afterColon": true }],
		"new-cap": 0,
		"no-floating-decimal": 2,
		"no-lonely-if": 2,
		"no-mixed-spaces-and-tabs": [2, true],
		"no-multiple-empty-lines": 2,
		"no-nested-ternary": 2,
		"no-spaced-func": 2,
		"no-use-before-define": 2,
		"no-undefined": 2,
		"no-underscore-dangle": 0,
		"indent": [2, "tab"],
		"quotes": [2, "single"],
		"radix": 2,
		"space-after-keywords": [2, "always"],
		"spaced-line-comment": 2,
		"strict": 0,
		"valid-jsdoc": [2, {
			"prefer": {
				"return": "returns"
			}
		}],
		"wrap-iife": 2,
		"yoda": [0, "always"]
	}
}
